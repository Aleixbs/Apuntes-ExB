{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": "off"
    }, 
    "husky": {
        "hooks":{
            "pre-commit": "lint-staged"
        }
    }, 
    "lint-staged": {
        "src/**/*.{js,jsx}": ["npm run lint"]
    }
}
